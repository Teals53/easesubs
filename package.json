{
  "name": "easesubs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "type-check": "tsc --noEmit",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html --save-assets --view",
    "perf:build-size": "npx bundle-analyzer .next/static/chunks/*.js",
    "seo:audit": "node scripts/seo-report.mjs",
    "seo:report": "node scripts/seo-report.mjs",
    "a11y:test": "node scripts/test-accessibility.js",
    "a11y:test:ci": "BASE_URL=http://localhost:3000 node scripts/test-accessibility.js",
    "a11y:install": "npm install --save-dev @axe-core/playwright playwright",
    "test:accessibility": "npm run a11y:test",
    "test:a11y": "npm run a11y:test"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
